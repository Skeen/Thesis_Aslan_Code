{
  "manifest_version": 2,

  "name": "JsSpy browser extension",
  "description": "This extension measures the amount of time it takes for webpages to load",
  "version": "1.0",

  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" },

  "browser_action": {
    "default_icon": "icon48.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/"
  ],

  "content_scripts": [
    {
      "matches" :["<all_urls>"],
      "js"     : ["content.js"],
      "run_at" : "document_start"
    }
  ],

  "background" : {
    "scripts" : ["jquery-2.1.4.min.js", "background.js"]
  }


}
